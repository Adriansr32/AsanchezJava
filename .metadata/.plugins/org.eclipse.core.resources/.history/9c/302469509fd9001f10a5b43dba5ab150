package ola;

import java.util.*;

public class IMC {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		
		System.out.print("Entra tu peso: ");
		double peso = in.nextDouble();
		System.out.print("Entra tu altura: ");
		double altura = in.nextDouble();
		
		  double imc = peso / (altura * altura);
		
		  System.out.printf("Tu IMC es: %d.2%n", imc);
	while 	  
		if (imc < 18.5) {
			System.out.println("Estas bajo peso");
		} else if ( imc >= 18.5 && imc <= 24.9) {
			System.out.println("Estas en un peso saludable");
		} else if (peso >= 25.0 && imc <= 29.9 ) {
			System.out.println("Sobrepeso");
		} else {
			System.out.println("Obesidad");
		}
		
	}

}
