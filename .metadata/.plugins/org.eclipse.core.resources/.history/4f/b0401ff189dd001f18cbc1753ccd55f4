package metodes_4;

public class metodes4_2 {

	public static void main(String[] args) {
        StringBuilder sb = new StringBuilder();  

		int  mes = 0;
		int dia = 0;
		
		switch (dia) {
        case 1:
            sb.append("Lunes");
            break;
        case 2:
        	sb.append("Martes");
            break;
        case 3:
        	sb.append("Miércoles");
            break;
        case 4:
        	sb.append("Jueves");
            break;
        case 5:
        	sb.append("Viernes");
            break;
        case 6:
        	sb.append("Sábado");
            break;
        case 7:
        	sb.append("Domingo");
            break;
		}
		switch (mes) {
        case 1:
            sb.append("Lunes");
            break;
        case 2:
        	sb.append("Martes");
            break;
        case 3:
        	sb.append("Miércoles");
            break;
        case 4:
        	sb.append("Jueves");
            break;
        case 5:
        	sb.append("Viernes");
            break;
        case 6:
        	sb.append("Sábado");
            break;
        case 7:
        	sb.append("Domingo");
            break;
        case 8:
        	sb.append("Día inválido");
        case 9:
        	sb.append("");
        	break;
        case 10:
        	sb.append("");
        	break;
        case 11:
        	sb.append("");
        	break;
        case 12:
        	sb.append("");
        	break;

	}
		}

}
