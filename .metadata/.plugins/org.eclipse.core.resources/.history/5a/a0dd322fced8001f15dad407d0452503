package metodes3_AdrianSanchez;

import java.util.*;

public class Metodes3_2 {
    static ArrayList<Integer> nums = new ArrayList<>();
    static ArrayList<Integer> numsPositive = new ArrayList<>();
    static ArrayList<Integer> numsNegative = new ArrayList<>();

    public static void main(String[] args) {
        leerNumeros();
        mostrarNumeros("Has entrat el següents números:");
        ordenarYMostrar();
        separarNumeros();
        mostrarNumerosPositivos();
        mostrarNumerosNegativos();
    }

    public static void leerNumeros() {
        Scanner in = new Scanner(System.in);
        boolean zero = false;

        while (!zero) {
            System.out.print("Introduce un número: ");
            int num = in.nextInt();

            if (num == 0) {
                zero = true;
            } else if (num >= -10 && num <= 10) {
                nums.add(num);
            } else {
                System.out.println("[Error!] - Introdueix un numero entre el -10 i el 10!");
            }
        }
    }

    public static void mostrarNumeros(String mensaje) {
        System.out.print(mensaje + " [");
        for (int i = 0; i < nums.size(); i++) {
            System.out.print(nums.get(i));
            if (i < nums.size() - 1) {
                System.out.print(", ");
            }
        }
        System.out.println("]");
    }

    public static void ordenarYMostrar() {
        Collections.sort(nums);
        mostrarNumeros("Si els ordenem quedaran així:");
    }

    public static void separarNumeros() {
        for (int i = 0; i < nums.size(); i++) {
            if (nums.get(i) > 0) {
                numsPositive.add(nums.get(i));
            } else if (nums.get(i) < 0) {
                numsNegative.add(nums.get(i));
            }
        }
    }

    public static void mostrarNumerosPositivos() {
        System.out.print("Els números positius són: [");
        for (int i = 0; i < numsPositive.size(); i++) {
            System.out.print(numsPositive.get(i));
            if (i < numsPositive.size() - 1) {
                System.out.print(", ");
            }
        }
        System.out.println("]");
        mostrarEstrellasPositivas();
    }

    public static void mostrarEstrellasPositivas() {
        for (int i = 0; i < numsPositive.size(); i++) {
            System.out.print(numsPositive.get(i) + ":");
            for (int j = 0; j < numsPositive.get(i); j++) {
                System.out.print("*");
            }
            System.out.println();
        }
    }

    public static void mostrarNumerosNegativos() {
        numsNegative.sort(Collections.reverseOrder());
        System.out.print("Els números negatius són: [");
        for (int i = 0; i < numsNegative.size(); i++) {
            System.out.print(numsNegative.get(i));
            if (i < numsNegative.size() - 1) {
                System.out.print(", ");
            }
        }
        System.out.println("]");
        mostrarEstrellasNegativas();
    }

    public static void mostrarEstrellasNegativas() {
        for (int i = 0; i < numsNegative.size(); i++) {
            System.out.print(numsNegative.get(i) + ":");
            for (int j = 0; j < Math.abs(numsNegative.get(i)); j++) {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
