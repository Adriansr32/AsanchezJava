package metodes3_AdrianSanchez;
import java.util.*;

public class Metodes3_1 {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        
        // Pedir nÃºmero
        int num = 0;
        boolean correctN = false;
        
        while (!correctN) {
            System.out.print("Introdueix un numero imparell [5 - 29]: ");
            num = in.nextInt();
            if (num >= 5 && num <= 29 && num % 2 != 0) {
                correctN = true;
            } else {
                System.out.println("Error - Ha de ser un numero imparell entre 5 i 29");
            }
        }
        in.nextLine();
        
        // Pedir letra
        String letra = "";
        boolean correctL = false;
        
        while (!correctL) {
            System.out.print("Amb quina lletra vols que pinti l'arbre: ");
            letra = in.nextLine();
            if (letra.length() == 1 && Character.isLetter(letra.charAt(0))) {
                correctL = true;
            } else {
                System.out.println("Error - Introdueix una sola lletra");
            }
        }
        
        // Dibujar Ã¡rbol
        dibujarArbol(num, letra);
        
        in.close();
    }
    
    public static void dibujarArbol(int num, String letra) {
        // Dibujar la copa del Ã¡rbol
        for (int i = 1; i <= num; i += 2) {
            // El printf alinea a la derecha usando espacios
            // El primer nÃºmero en el formato es el ancho total del campo
            System.out.printf("%" + (num) + "s", "");
            
            // Dibujar letras
            for (int j = 0; j < i; j++) {
                System.out.print(letra.toUpperCase());
            }
            System.out.println();
        }
        
        // Dibujar el tronco
        System.out.printf("%" + ((num + 1) / 2) + "s%n", "l");
    }
}